<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Editing user" do %>
    <li class="breadcrumb-item"><%= link_to "Backend", backend_path %></li>
    <li class="breadcrumb-item"><%= link_to "Users", backend_users_path %></li>
    <li class="breadcrumb-item"><%= link_to @user.email, @user %></li>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <%= render "form", user: @user %>
      </div>
    </div>
  </div>
</div>
